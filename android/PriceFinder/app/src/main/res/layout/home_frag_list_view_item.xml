<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/homeItemTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:text="Product title"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/homeItemDateAddedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_below="@id/homeItemTitleText"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:text="Date added: 12/12/12"
        android:textColor="#000000"
        android:textSize="14sp"
        />

    <!--ImageView
        android:id="@+id/homeItemClickIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        ></ImageView-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true">
        <!--android:layout_toLeftOf="@id/homeItemClickIcon"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Lowest price: "/>

            <TextView
                android:id="@+id/homeItemPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100.00"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/homeItemTargetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="20.0"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>