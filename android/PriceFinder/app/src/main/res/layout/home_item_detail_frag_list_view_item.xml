<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detailItemTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/detailSublayout"
        android:ellipsize="marquee"
        android:singleLine="false"
        android:text="Product title"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@id/detailSublayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true">
        <!--android:layout_toLeftOf="@id/searchItemClickIcon"-->

        <TextView
            android:id="@+id/detailItemPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="$100.00"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailItemVendorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailItemPriceText"
            android:layout_alignParentRight="true"
            android:text="Walmart"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>